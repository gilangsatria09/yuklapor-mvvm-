<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="TitleBarTextAppereance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/monserratmedium</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="AppThemeWithBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="subtitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/montserratregular</item>
    </style>

    <style name="editTextAuth" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/monserratsemibold</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:background">@drawable/bg_rounded_edittext</item>
    </style>

    <style name="editTextContent" parent="Widget.Design.TextInputLayout">
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/monserratmedium</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:background">@drawable/bg_rounded_edittext</item>

    </style>

    <style name="buttonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/monserratsemibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:paddingStart">@dimen/_16sdp</item>
        <item name="android:paddingEnd">@dimen/_16sdp</item>
    </style>

</resources>
